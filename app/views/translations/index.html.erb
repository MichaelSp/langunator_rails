<h1>Listing translations</h1>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Word</th>
      <th>Times right</th>
      <th>Times wrong</th>
      <th>Times skiped</th>
      <th>Times resetted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @translations.each do |translation| %>
      <tr>
        <td><%= translation.word %></td>
        <td><%= translation.word %></td>
        <td><%= translation.times_right %></td>
        <td><%= translation.times_wrong %></td>
        <td><%= translation.times_skiped %></td>
        <td><%= translation.times_resetted %></td>
        <td><%= link_to 'Show', translation %></td>
        <td><%= link_to 'Edit', edit_translation_path(translation) %></td>
        <td><%= link_to 'Destroy', translation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

