<%- model_class = Translation -%>
<div class="page-header">
  <h1><%=t '.title', :default => Translation %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:times_right) %></th>
      <th><%= model_class.human_attribute_name(:times_wrong) %></th>
      <th><%= model_class.human_attribute_name(:times_skiped) %></th>
      <th><%= model_class.human_attribute_name(:times_resetted) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @translations.each do |translation| %>
      <tr>
        <td><%= translation.id %></td>
        <td><%= translation.times_right %></td>
        <td><%= translation.times_wrong %></td>
        <td><%= translation.times_skiped %></td>
        <td><%= translation.times_resetted %></td>
        <td><%=l translation.created_at, format: :long %></td>
        <td>
          <%= link_to translation_path(translation), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to translation_path(translation), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_translation_path,
            :class => 'btn btn-primary' %>
