<%- model_class = Translation -%>
<div class="page-header">
  <h1><%=t '.title', :default => Translation %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:times_right) %></dt>
      <dd><pre class="prettyprint"><%= @translation.times_right %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:times_wrong) %></dt>
      <dd><pre class="prettyprint"><%= @translation.times_wrong %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:times_skiped) %></dt>
      <dd><pre class="prettyprint"><%= @translation.times_skiped %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:times_resetted) %></dt>
      <dd><pre class="prettyprint"><%= @translation.times_resetted %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              translations_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_translation_path(@translation), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              translation_path(@translation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

