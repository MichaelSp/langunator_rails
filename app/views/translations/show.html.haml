.container.col-md-offset-2.col-md-8
  .row.col-md-offset-8.col-md-3
    %input.form-control(type="search" ng-model="filter.$" placeholder='Search...')

  %table.table(ng-table="tableParams" show-filter="true")
    %tbody(ng-repeat="translation in $data")
      %tr(id="tr{{translation.id}}" ng-class="{ 'warning': translation.times_wrong / translation.times_right > 0}")
        %td(data-title="'Section'" sortable="'section'" filter="{ 'section': 'text' }")
          {{translation.section}}
        %td(data-title="'Word 1'" sortable="'word1.name'")
          %i
            {{translation.word1.language.name}}:
          {{translation.word1.name}}
        %td(data-title="'Word 2'" sortable="'word2.name'")
          %i
            {{translation.word2.language.name}}:
          {{translation.word2.name}}
        %td
          %input.btn.btn-default(type='button' id="editRowBtn{{translation.id}}" value="edit" ng-click="setEditId(translation.id)")
      %tr(ng-show="editId===translation.id" ng-if="editId===translation.id")
        %td(colspan="4" ng-include="" src="'translations/edit.html'")